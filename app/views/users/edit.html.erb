<h1>Edit you're information below</h1>

<%= form_for @current_user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name  %>

    <%= f.label :height %>
    <%= f.number_field :height, :placeholder => "in cm" %>

    <%= f.label :weight %>
    <%= f.number_field :weight, :placeholder => "in kgs" %>

    <%= f.submit "Save Information" %>
<% end %>